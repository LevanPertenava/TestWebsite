@model EmployeeEditViewModel

@{
    var photoPath = "~/images/" + (Model.ExistingPhotoPath ?? "noimage.jpg");
    ViewBag.Title = "Edit Employee";

}

<form enctype="multipart/form-data" asp-controller="home" asp-action="edit" method="post" class="mt-3">
    <div class="form-group row">
        <input hidden asp-for="Id" />
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mt-3">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mt-3">
        <label asp-for="Department" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Department" class="custom-select mr-sm-2 form-select"
                    asp-items="Html.GetEnumSelectList<Dept>()">
                <option value="" disabled selected class="text-secondary">Please select</option>
            </select>
            <span asp-validation-for="Department" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row mt-3">
        <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Photo" class="form-control" type="file" id="formFile">
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger mt-3"></div>
    <div class="form-group row mt-3">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <button asp-controller="home" asp-action="index" type="submit" class="btn btn-primary">Cancel</button>
        </div>
    </div>   
    <div class="form-group row mt-5">
        <img class="card-img-top img-fluid text-center" src="@photoPath" asp-append-version="true" style="max-width: 200px; display: block; margin-left: auto; margin-right: auto;" />
    </div>
</form>